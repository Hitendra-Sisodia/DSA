// subsets sum
#include<bits/stdc++.h>
using namespace std;
void subSetsSum(vector<int> arr,int sum,int index,vector<int> &ans)
{
    // base case
    if(index >= arr.size()){
        ans.push_back(sum);
        return ;
    }
    // pick 
    sum += arr[index];
    subSetsSum(arr,sum,index+1,ans);
    sum -= arr[index];
    // don't pick
    subSetsSum(arr,sum,index+1,ans);
}
int main()
{
    vector<int> arr = {1,2,3};
    vector<int> ans;
    int sum = 0;
    int index = 0;
    subSetsSum(arr,sum,index,ans);
    for(auto it:ans){
        cout<<it<<" ";
    }
}
