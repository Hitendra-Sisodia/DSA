// print sum of numbers by using functional recursion (Method - 2)
#include<bits/stdc++.h>
using namespace std;
int sum(int n)
{
    // base case
    if(n <= 0){
        return 0;
    }
    // recursive case
    else{
        return n + sum(n-1);
    }
}
int main()
{
    // sum is
    cout<<sum(5);
}
